{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "baseUrl": "./",
    "paths": {
			"src/*": ["src/*"]
		},
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
	"include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
}
